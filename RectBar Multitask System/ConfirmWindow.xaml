<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="RectBar_Multitask_System.ConfirmWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Подтвердите удаление"
	Width="300"
	Height="238">
	<Grid>
		<StackPanel
			Orientation="Vertical">
			<TextBlock
				TextAlignment="Center"
				Width="250"
				Height="120"
				x:Name="messageBlock"
				TextWrapping="Wrap"
				Margin="0,20,0,20" />
			<StackPanel
				Orientation="Horizontal"
				HorizontalAlignment="Center"
				Height="30">
				<Button
					Content="Да"
					x:Name="confirmButton"
					Width="100"
					Click="confirmButton_Click" />
				<Button
					Margin="20,0,0,0"
					Content="Отмена"
					x:Name="exitButton"
					Width="100"
					RenderTransformOrigin="0.5,0.5"
					Click="exitButton_Click" />
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>