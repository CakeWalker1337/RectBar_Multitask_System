<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="RectBar_Multitask_System.EditSmallWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="RectBar_Multitask_System"
	Width="406"
	Height="189">
	<Grid>
		<StackPanel
			Orientation="Vertical">
			<StackPanel
				Orientation="Horizontal"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Margin="0,40,0,0"
				Height="29"
				Width="299">
				<TextBlock
					VerticalAlignment="Center"
					x:Name="infoBlock">
					<Run
						Text="Название" />
				</TextBlock>
				<TextBox
					Margin="30,0,0,0"
					x:Name="nameBox"
					Width="214"
					Height="29"
					VerticalContentAlignment="Center" />
			</StackPanel>
			<StackPanel
				Orientation="Horizontal"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Margin="0,40,0,0">
				<Button
					Content="Сохранить"
					Height="30"
					x:Name="saveButton"
					Click="saveButton_Click"
					Width="80" />
				<Button
					Height="30"
					Content="Удалить"
					x:Name="deleteButton"
					Click="deleteButton_Click"
					Width="80"
					Margin="30,0,0,0" />
				<Button
					Height="30"
					Content="Закрыть"
					x:Name="exitButton"
					Click="exitButton_Click"
					Width="80"
					Margin="30,0,0,0" />
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>